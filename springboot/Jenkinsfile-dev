pipeline {
    agent {
        kubernetes {
            label 'aks-ci-agent'
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: azcli
    image: mcr.microsoft.com/azure-cli
    command:
      - cat
    tty: true
  - name: kaniko
    image: gcr.io/kaniko-project/executor:latest
    args:
      - sleep
      - \"infinity\"
    volumeMounts:
      - mountPath: /kaniko/.docker/
        name: docker-config
  - name: kubectl
    image: bitnami/kubectl:latest
    command:
      - cat
    tty: true
  volumes:
  - name: docker-config
    emptyDir: {}
"""
        }
    }

    environment {
        ACR_NAME    = 'acrfraserraney'
        ACR_LOGIN   = 'acrfraserraney.azurecr.io'
        IMAGE_NAME  = "trading-app:${BUILD_NUMBER}"
        RESOURCE_GROUP  = 'rg-trading-app-aks'
        CLUSTER_NAME     = 'aks-trading-app'
    }

    stages {

        stage('Init - Azure Login') {
            steps {
                container('azcli') {
                    withCredentials([
                        usernamePassword(credentialsId: 'AZ_SP_DEV',
                                         usernameVariable: 'AZ_USER',
                                         passwordVariable: 'AZ_PWD'),
                        string(credentialsId: 'AZ_TENANT_DEV', variable: 'AZ_TENANT')
                    ]) {
                        sh '''
                          az login --service-principal \
                            --username "$AZ_USER" \
                            --password "$AZ_PWD" \
                            --tenant "$AZ_TENANT"
                        '''
                    }
                }
            }
        }

        stage('Build & Push Image') {
            steps {
                container('kaniko') {
                    sh '''
                    # Configure Kaniko with Azure auth for ACR
                    mkdir -p /kaniko/.docker
                    az acr login -n ${ACR_NAME}

                    # Copy Azure credentials into Kaniko Docker config
                    cp /root/.docker/config.json /kaniko/.docker/config.json

                    /kaniko/executor \
                      --context $WORKSPACE \
                      --dockerfile $WORKSPACE/Dockerfile \
                      --destination ${ACR_LOGIN}/${IMAGE_NAME}
                    '''
                }
            }
        }

        stage('Deploy to AKS') {
            steps {
                container('azcli') {
                    sh '''
                    az aks get-credentials \
                      --resource-group ${RESOURCE_GROUP} \
                      --name ${CLUSTER_NAME}
                    '''
                }
                container('kubectl') {
                    sh '''
                    kubectl set image deployment/trading \
                      trading-app=${ACR_LOGIN}/${IMAGE_NAME}

                    kubectl get all
                    '''
                }
            }
        }
    }
}