pipeline {
    agent {
        kubernetes {
            label 'aks-ci-agent'
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: azcli
    image: mcr.microsoft.com/azure-cli
    command:
      - cat
    tty: true
  - name: kaniko
    image: gcr.io/kaniko-project/executor:debug
    args:
      - "-c"
      - "cat"
    volumeMounts:
      - mountPath: /kaniko/.docker/
        name: docker-config
  - name: kubectl
    image: bitnami/kubectl:latest
    command:
      - cat
    tty: true
  volumes:
  - name: docker-config
    emptyDir: {}
"""
        }
    }

    environment {
        ACR_NAME       = 'acrfraserraney'
        ACR_LOGIN      = 'acrfraserraney.azurecr.io'
        IMAGE_NAME     = "trading-app:${BUILD_NUMBER}"
        RESOURCE_GROUP = 'rg-trading-app-aks'
        CLUSTER_NAME   = 'aks-trading-app'
    }

    stages {

        stage('Azure Login') {
            steps {
                container('azcli') {
                    withCredentials([
                        usernamePassword(
                            credentialsId: 'AZ_SP_DEV',
                            usernameVariable: 'AZ_USER',
                            passwordVariable: 'AZ_PWD'
                        ),
                        string(credentialsId: 'AZ_TENANT_DEV', variable: 'AZ_TENANT')
                    ]) {
                        sh '''
                        az login --service-principal \
                          --username "$AZ_USER" \
                          --password "$AZ_PWD" \
                          --tenant "$AZ_TENANT"
                        '''
                    }
                }
            }
        }

        stage('Build & Push Image') {
            steps {
                container('kaniko') {
                    withCredentials([
                        usernamePassword(
                            credentialsId: 'AZ_SP_DEV',
                            usernameVariable: 'AZ_USER',
                            passwordVariable: 'AZ_PWD'
                        )
                    ]) {
                        sh '''
                        # Create Kaniko Docker config for ACR
                        mkdir -p /kaniko/.docker
                        cat > /kaniko/.docker/config.json <<EOF
{
  "auths": {
    "${ACR_LOGIN}": {
      "auth": "$(echo -n "${AZ_USER}:${AZ_PWD}" | base64)"
    }
  }
}
EOF

                        # Run Kaniko to build & push the image
                        /kaniko/executor \
                          --context $WORKSPACE \
                          --dockerfile $WORKSPACE/Dockerfile \
                          --destination ${ACR_LOGIN}/${IMAGE_NAME} \
                          --insecure
                        '''
                    }
                }
            }
        }

        stage('Deploy to AKS') {
            steps {
                container('azcli') {
                    sh '''
                    az aks get-credentials \
                      --resource-group ${RESOURCE_GROUP} \
                      --name ${CLUSTER_NAME}
                    '''
                }
                container('kubectl') {
                    sh '''
                    kubectl set image deployment/trading \
                      trading-app=${ACR_LOGIN}/${IMAGE_NAME}
                    kubectl rollout status deployment/trading
                    kubectl get all
                    '''
                }
            }
        }
    }
}